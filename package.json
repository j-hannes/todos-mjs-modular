    "lodash.assign": "^3.0.0",
    "normalize.css": "^3.0.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "gulp-connect": "^2.2.0",
    "husky": "^0.7.0",
