{
  "name": "todos-mjs-modular",
  "version": "0.1.0",
  "description": "a modular marionette application",
  "main": "gulpfile.js",
  "repository": "git@github.com:j-hannes/todos-mjs-modular",
  "author": "j-hannes",
  "license": "MIT",
  "scripts": {
    "prepush": "npm run test-integration",
